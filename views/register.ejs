<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | GameBid</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-950 text-white">
    <%- include('partials/navbar') %>

    <main class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div class="text-center">
                <h2 class="text-3xl font-bold">Create your account</h2>
                <p class="mt-2 text-zinc-400">Join the gaming marketplace</p>
            </div>

            <div class="mt-8 bg-zinc-900 p-8 rounded-xl">
                <form class="space-y-6" action="/register" method="POST">
                    <div>
                        <label class="block text-sm font-medium text-zinc-400">Username</label>
                        <input type="text" name="username" required minlength="3"
                               class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-700 rounded-lg 
                                      focus:outline-none focus:ring-2 focus:ring-violet-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-zinc-400">Email</label>
                        <input type="email" name="email" required
                               class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-700 rounded-lg 
                                      focus:outline-none focus:ring-2 focus:ring-violet-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-zinc-400">Password</label>
                        <input type="password" name="password" required minlength="6"
                               class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-700 rounded-lg 
                                      focus:outline-none focus:ring-2 focus:ring-violet-500">
                        <p class="mt-1 text-sm text-zinc-500">Must be at least 6 characters</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-zinc-400">Confirm Password</label>
                        <input type="password" name="confirmPassword" required
                               class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-700 rounded-lg 
                                      focus:outline-none focus:ring-2 focus:ring-violet-500">
                    </div>

                    <% if (locals.error) { %>
                        <div class="text-red-500 text-sm"><%= error %></div>
                    <% } %>

                    <button type="submit"
                            class="w-full bg-violet-600 hover:bg-violet-700 py-2 rounded-lg transition">
                        Create Account
                    </button>
                </form>
            </div>

            <p class="text-center text-zinc-400">
                Already have an account? 
                <a href="/login" class="text-violet-400 hover:text-violet-300">Login here</a>
            </p>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>