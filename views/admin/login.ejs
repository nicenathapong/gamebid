<!-- views/admin/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login | GameBid</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-950 text-white">
    <main class="min-h-screen flex items-center justify-center p-4">
        <div class="max-w-sm w-full">
            <div class="text-center mb-8">
                <h1 class="text-2xl font-bold">GameBid Admin</h1>
                <p class="text-zinc-400 mt-2">Sign in to admin dashboard</p>
            </div>

            <form action="/admin/login" method="POST" class="bg-zinc-900 rounded-xl p-6 space-y-4">
                <div>
                    <label class="block text-sm text-zinc-400 mb-1">Username</label>
                    <input type="text" name="username" required
                           class="w-full px-3 py-2 bg-zinc-800 rounded-lg border border-zinc-700 focus:ring-2 ring-violet-500">
                </div>

                <div>
                    <label class="block text-sm text-zinc-400 mb-1">Password</label>
                    <input type="password" name="password" required
                           class="w-full px-3 py-2 bg-zinc-800 rounded-lg border border-zinc-700 focus:ring-2 ring-violet-500">
                </div>

                <% if (locals.error) { %>
                    <div class="text-red-400 text-sm"><%= error %></div>
                <% } %>

                <button type="submit" class="w-full bg-violet-600 hover:bg-violet-700 py-2 rounded-lg transition">
                    Sign in
                </button>
            </form>

            <div class="mt-4 text-center">
                <a href="/" class="text-zinc-400 hover:text-white text-sm">‚Üê Back to main site</a>
            </div>
        </div>
    </main>
</body>
</html>