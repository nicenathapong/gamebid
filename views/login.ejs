<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | GameBid</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-950 text-white">
    <%- include('partials/navbar') %>

    <main class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div class="text-center">
                <h2 class="text-3xl font-bold">Welcome back</h2>
                <p class="mt-2 text-zinc-400">Enter your details to continue</p>
            </div>

            <div class="mt-8 bg-zinc-900 p-8 rounded-xl">
                <form class="space-y-6" action="/login" method="POST">
                    <div>
                        <label class="block text-sm font-medium text-zinc-400">Username</label>
                        <input type="text" name="username" required 
                               class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-700 rounded-lg 
                                      focus:outline-none focus:ring-2 focus:ring-violet-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-zinc-400">Password</label>
                        <input type="password" name="password" required 
                               class="mt-1 block w-full px-3 py-2 bg-zinc-800 border border-zinc-700 rounded-lg 
                                      focus:outline-none focus:ring-2 focus:ring-violet-500">
                    </div>

                    <% if (locals.error) { %>
                        <div class="text-red-500 text-sm"><%= error %></div>
                    <% } %>

                    <button type="submit" 
                            class="w-full bg-violet-600 hover:bg-violet-700 py-2 rounded-lg transition">
                        Sign in
                    </button>
                </form>
            </div>

            <p class="text-center text-zinc-400">
                Don't have an account? 
                <a href="/register" class="text-violet-400 hover:text-violet-300">Register here</a>
            </p>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>
</html>